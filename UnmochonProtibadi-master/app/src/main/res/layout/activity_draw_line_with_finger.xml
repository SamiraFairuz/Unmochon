<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DrawLineWithFingerActivity"
    android:weightSum="6">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_weight=".6"
        android:layout_height="0dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="এডিট স্ক্রিনশট "
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </android.support.v7.widget.Toolbar>
    <com.unmochon.protibadi.unmochonprotibadi.CustomView.DrawLineCanvas
        android:id="@+id/dlc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.4"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/btn_redo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border_focus_layout"
        android:padding="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_undo"


        />
    <ImageView
        android:id="@+id/btn_undo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border_focus_layout"
        android:padding="8dp"
        android:src="@drawable/ic_redo"

        />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="1"

        android:layout_weight=".5">

        <Button
            android:id="@+id/btn_save_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/button_border_focus_layout"
            android:text="সেইভ ও সেন্ড করুন "
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_alignParentBottom="true"/>


        <!--<Button-->
            <!--android:id="@+id/btn_send_image"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight=".5"-->
            <!--android:background="@drawable/button_border_focus_layout"-->
            <!--android:text="সেন্ড"-->
            <!--android:textColor="@color/white"-->
            <!--android:layout_margin="8dp"-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="16sp"-->
            <!--android:gravity="center"-->
            <!--android:layout_alignParentBottom="true"/>-->

    </LinearLayout>





</LinearLayout>